    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magenest_SuperEasySeo::super_easy_seo" title="Super Easy Seo" sortOrder="40">
                    <resource id="Magenest_SuperEasySeo::config_super_easy_seo" title="Crawling and Indexation" sortOrder="10"/>
                    <resource id="Magenest_SuperEasySeo::templates" title="Mass SEO Content Generator" sortOrder="20">
