<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">movie_movie.movie_movie_data_source</item>
            <item name="deps" xsi:type="string">movie_movie.movie_movie_data_source</item>
        </item>

        <item name="label" xsi:type="string" translate="true">Movie Form</item>

        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">movie_form</item>
        </item>

        <item name="template" xsi:type="string">templates/form/collapsible</item>

        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Magenest\Movie\Block\Adminhtml\Movie\Edit\BackButton</item>
            <item name="delete" xsi:type="string">Magenest\Movie\Block\Adminhtml\Movie\Edit\DeleteButton</item>
            <item name="reset" xsi:type="string">Magenest\Movie\Block\Adminhtml\Movie\Edit\ResetButton</item>
            <item name="save" xsi:type="string">Magenest\Movie\Block\Adminhtml\Movie\Edit\SaveButton</item>
        </item>
    </argument>

    <dataSource name="movie_movie_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magenest\Movie\Model\Movie\DataProvider</argument>
            <argument name="name" xsi:type="string">movie_movie_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">movie_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="movie/movie/save" />
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="movie">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">New Movie</item>
            </item>
        </argument>

        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Name</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">movie</item>
                </item>
            </argument>
        </field>

        <field name="description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Description</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">movie</item>
                </item>
            </argument>
        </field>

        <field name="rating">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Rating</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">integer</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">movie</item>
                </item>
            </argument>
        </field>

        <field name="director_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Director Id</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">integer</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">movie</item>
                </item>
            </argument>
        </field>

    </fieldset>
</form>
